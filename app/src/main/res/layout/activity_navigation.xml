<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.schoolproject.project24_android.NavigationActivity">

    <Button
        android:id="@+id/matchHistoryButton"
        android:layout_width="159dp"
        android:layout_height="48dp"
        android:layout_marginLeft="113dp"
        android:layout_marginTop="288dp"
        android:onClick="matchHistoryButton"
        android:text="Match History"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/achievementButton"
        android:layout_width="159dp"
        android:layout_height="48dp"
        android:layout_marginLeft="113dp"
        android:layout_marginTop="207dp"
        android:onClick="achievementsButton"
        android:text="Achievements"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/profileButton"
        android:layout_width="159dp"
        android:layout_height="48dp"
        android:layout_marginLeft="113dp"
        android:layout_marginTop="123dp"
        android:onClick="profileButton"
        android:text="Profile"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/navigationTitle"
        style="@android:style/TextAppearance.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="139dp"
        android:layout_marginTop="50dp"
        android:text="Navigation"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
